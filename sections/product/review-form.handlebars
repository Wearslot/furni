              <div class="comment-form-comment w-75">
                  <textarea id="comment" class="form-control" name="comment" placeholder="Your Review *" required="required"></textarea>
              </div>
              <div class="d-md-flex mt-2">
                <div class="comment-form-author">
                    <input id="author" name="author" class="form-control" placeholder="Your Name *" type="text" required="required" />
                </div>
                <div class="comment-form-email mt-3 mt-lg-0 ms-lg-2">
                    <input id="email" name="email" class="form-control" placeholder="Your Email *" type="text" aria-describedby="email-notes" required="required" />
                </div>
              </div>
              <p class="comment-form-cookies-consent">
                  <input id="wp-comment-cookies-consent" name="wp-comment-cookies-consent" type="checkbox"/>
